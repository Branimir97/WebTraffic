{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="css/container30.css">
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="h3 m-3 text-center">Login <i class="fas fa-sign-in-alt"></i></h1>
        <form method="post"> 
            {% if error %}
                <div class="alert alert-danger mt-1 p-2 text-center">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}      
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">  
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" name="email" id="inputEmail" class="form-control" 
                       value="{{ last_username }}" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>
            <div class="text-center">
                <button type="submit" class="mt-2 btn btn-info">Login</button>
                <p class="mt-2">
                    Don't have an account? Register <a href="{{ path('app_register') }}">here.</a>
                </p>
            </div>
        </form>
    </div>
{% endblock %}
